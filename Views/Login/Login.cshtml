@model TestWebApplication.DB.Models.User

@{
    ViewData["Title"] = "Login";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-3 mt-md-1 pb-5">
                           
                            <h1 class="fw-bold mb-5 text-uppercase">Login</h1>
                            @{
                                if (ViewBag.Message != null)
                                {
                                    <p style="color:red">@ViewBag.Message</p>
                                }
                            }

                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="UserName" class="form-control form-control-lg" placeholder="Username" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="button-container mt-5">
									<input type="submit" value="Ok" class="btn btn-outline-light btn-lg px-5" />

                                    <input type="reset" value="Cancel" class="btn btn-outline-light btn-lg px-5" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
