@model MainPageModel

@{
    ViewBag.Title = "Main Page";
}

<div class="container mt-5">
    <h1 class="mb-4">Main Page</h1>

    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label for="projectName" class="col-sm-4 col-form-label">Project name:</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="projectName" name="ProjectName" value="@Model.Project.ProjectName" required required />
                        <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="projectEnabled" class="col-sm-4 col-form-label">Project enabled:</label>
                    <div class="col-sm-8">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="projectEnabled" name="ProjectEnabled" checked="@Model.Project.ProjectEnabled" />
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="acceptingNewVisits" class="col-sm-4 col-form-label">Accepting new visits:</label>
                    <div class="col-sm-8">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="acceptingNewVisits" name="AcceptingNewVisits" checked="@Model.Project.AcceptingNewVisits" onchange="toggleSupportedImageTypes()" />
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="supportedImageTypes" class="col-sm-4 col-form-label">Supported image types:</label>
                    <div class="col-sm-8">
                        <select class="form-control" id="supportedImageTypes" name="SupportedImageType" disabled="@(!Model.Project.AcceptingNewVisits)">
                            <option value="" selected="@string.IsNullOrEmpty(Model.Project.SupportedImageType)"></option>
                            <option value="JPG" selected="@(Model.Project.SupportedImageType == "JPG")">JPG</option>
                            <option value="DICOM" selected="@(Model.Project.SupportedImageType == "DICOM")">DICOM</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
	<script>
        function toggleSupportedImageTypes() {
            const acceptingNewVisits = document.getElementById('acceptingNewVisits').checked;
            const supportedImageTypes = document.getElementById('supportedImageTypes');
            supportedImageTypes.disabled = !acceptingNewVisits;
            if (!acceptingNewVisits) {
                supportedImageTypes.value = '';
            } else {
                supportedImageTypes.value = 'JPG';
            }
        }
    </script>
}